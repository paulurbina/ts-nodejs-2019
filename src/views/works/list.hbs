<div class="row">
    {{#each works}}
        <div class="col-md-3">
            <div class="card-deck mt-4">
                <div class="card">
                    <div class="card-body">
                        <h4>{{title}}</h4>
                        <p>{{description}}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <a href="/works/delete/{{_id}}" class="btn btn-danger">
                            Delete
                        </a>
                        <a href="/works/edit/{{_id}}" class="btn btn-success">
                            Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}    
</div>


